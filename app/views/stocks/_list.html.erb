<div class="results-block col-md-12">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <%= "#{@user.email} [#{@user.user_stocks.count}]"  %>
        </div>

        <!-- Table -->
        <table class="table">
            <thead>
                <tr>
                    <th>Symbol</th>
                    <th>Name</th>
                    <th>Price</th>
                    <% if @user.id == current_user.id %>
                        <th>Actions</th>
                    <% end %>
                </tr>
            </thead>
            <tbody>
                <% current_user.stocks.each do |us| %>
                    <tr>
                        <th scope="row"><%= us.ticker %></th>
                        <td><%= us.name %></td>
                        <td><%= us.last_price %></td>
                        <% if @user.id == current_user.id %>
                            <td><%= link_to "Remove", user_stock_path(us), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %></td>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
